#!/bin/bash
APP="$1"; IMAGE="dokku/$APP"; NAME=$(< /dev/urandom tr -dc A-Za-z0-9 | head -c 16)

set -e

ID=$(docker run -d $IMAGE /bin/bash -c "cat /dokku/.provisioning || cat /dokku/www/.provisioning")
if [ $(docker wait $ID) -eq 0 ]; then
    echo "-----> Provisionning ..."
    docker run -name=$NAME $IMAGE /bin/bash -c "/bin/bash /dokku/.provisioning || /bin/bash /dokku/www/.provisioning"
    docker commit $NAME $IMAGE > /dev/null
fi
